<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".modle.ThreeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/Imgview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cricle"
                android:padding="40dp"
                android:src="@drawable/ic_photo_camera_black_24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


            <TextView
                android:id="@+id/txt_fullname_three"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="140dp"
                android:layout_marginRight="120dp"
                android:text="Full name *"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Imgview" />

            <EditText
                android:id="@+id/edt_fullname_three"
                android:layout_width="360dp"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:hint="Ex:Yamada Toro"
                android:padding="0dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/txt_fullname_three" />

            <TextView
                android:id="@+id/unlike_fullname_three"
                android:layout_width="370dp"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/edt_fullname_three"
                app:layout_constraintStart_toStartOf="@+id/edt_fullname_three" />


            <TextView
                android:id="@+id/txt_adress_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="130dp"
                android:layout_marginRight="130dp"
                android:text="Email Address *"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/edt_fullname_three" />

            <EditText
                android:id="@+id/edt_adress_three"
                android:layout_width="360dp"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:gravity="left"
                android:hint="Enter email"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/txt_adress_three" />

            <TextView
                android:id="@+id/unlike_address_three"
                android:layout_width="370dp"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/edt_adress_three"
                app:layout_constraintStart_toStartOf="@+id/edt_adress_three" />

            <TextView

                android:id="@+id/txt_number_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="130dp"
                android:layout_marginRight="130dp"
                android:text="Phone number *"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/unlike_address_three" />


            <EditText
                android:id="@+id/edt_number_three"
                android:layout_width="360dp"
                android:layout_height="43dp"
                android:background="@android:color/white"
                android:hint="Ex:0123456"
                android:padding="0dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/txt_number_three" />

            <TextView
                android:id="@+id/unlike_number_three"
                android:layout_width="370dp"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@id/edt_number_three"
                app:layout_constraintTop_toBottomOf="@id/edt_number_three" />

            <TextView
                android:id="@+id/txt_curentpass_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="125dp"
                android:layout_marginRight="130dp"
                android:text="Current Password"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/unlike_number_three" />

            <EditText
                android:id="@+id/edt_curentpass_three"
                android:layout_width="360dp"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:gravity="left"
                android:hint="Enter password"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/txt_curentpass_three" />

            <TextView
                android:id="@+id/unlike_curentpass_three"
                android:layout_width="370dp"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/edt_curentpass_three"
                app:layout_constraintStart_toStartOf="@+id/edt_curentpass_three" />

            <TextView
                android:id="@+id/txt_password_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="130dp"
                android:layout_marginRight="130dp"
                android:text="New Password "
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/edt_curentpass_three" />


            <EditText
                android:id="@+id/edt_password_three"
                android:layout_width="360dp"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:gravity="left"
                android:hint="Enter Password"
                android:padding="0dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/txt_password_three" />

            <TextView
                android:id="@+id/unlike_pass_three"
                android:layout_width="370dp"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/edt_password_three"
                app:layout_constraintStart_toStartOf="@id/edt_password_three" />


            <TextView
                android:id="@+id/txt_confirm_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="105dp"
                android:layout_marginRight="130dp"
                android:text="Confirm New Password"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/edt_password_three" />

            <EditText
                android:id="@+id/edt_confrim_three"
                android:layout_width="360dp"
                android:layout_height="43dp"
                android:background="@android:color/white"
                android:hint="Enter confirm password"
                android:padding="0dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                app:layout_constraintRight_toRightOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/txt_confirm_three" />

            <TextView
                android:id="@+id/unlike_confrm_three"
                android:layout_width="370dp"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/edt_confrim_three"
                app:layout_constraintStart_toStartOf="@id/edt_confrim_three"

                />

            <Button
                android:id="@+id/button"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/shape"
                android:text="Update"
                android:textColorLink="#FF9800"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edt_confrim_three" />


        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="390dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="411dp" />
</androidx.constraintlayout.widget.ConstraintLayout>